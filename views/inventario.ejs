<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("templates/head.ejs") %>
  </head>
  <body>
    <div><%-include("templates/navbar.ejs") %></div>
    <div class="d-flex">
      <div class="container d-flex justify-content-center pt-3">
        <div class="card" style="width: 50rem">
          <div class="card-body">
            <h3 style="text-align: center">Agregar registro</h3>
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Id"
                aria-label="Id"
                id="id"
              />
            </div>

            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Nombre"
                aria-label="Nombre"
                id="nombre"
              />
            </div>

            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Tipo"
                aria-label="Tipo"
                id="tipo"
              />
            </div>

            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="Precio"
                aria-label="Precio"
                id="precio"
              />
            </div>
            <button type="button" class="btn btn-primary" id="btn-add" onclick="add()">
              Agregar
            </button>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script src="js/script.js"></script>
  </body>
</html>
