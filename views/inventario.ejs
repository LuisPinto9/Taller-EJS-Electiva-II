<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("templates/head.ejs") %>
  </head>
  <body>
    <div><%-include("templates/navbar.ejs") %></div>
    <div class="back">
      <div class="container d-flex justify-content-center pt-5">
        <div class="card" style="width: 50rem">
          <div class="card-body">
            <% if (components && components.length > 0) { %>
            <div class="table-responsive">
              <table
                class="table table table-hover table-bordered border border-black rounded"
              >
                <thead>
                  <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Costo</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                  </tr>
                </thead>
                <tbody>
                  <% var cont = 1; %> <% components.forEach((object) => { %>
                  <tr>
                    <td scope="row"><%= cont%></td>
                    <td><%= object.id %></td>
                    <td><%= object.nombre %></td>
                    <td><%= object.marca %></td>
                    <td><%= object.cantidad %></td>
                    <td><%= object.costo %></td>
                    <td>
                      <button
                        style="border: none; background-color: transparent"
                        type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#staticBackdropEditar<%= object.id %>"
                      >
                        <img src="images/editar.png" />
                      </button>
                      <div
                        class="modal fade"
                        id="staticBackdropEditar<%= object.id %>"
                        data-bs-backdrop="static"
                        data-bs-keyboard="false"
                        tabindex="-1"
                        aria-labelledby="staticBackdropLabel"
                        aria-hidden="true"
                      >
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1
                                class="modal-title fs-5"
                                id="staticBackdropLabel"
                              >
                                Editar Registro
                              </h1>
                              <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                              ></button>
                            </div>
                            <div class="modal-body">
                              <div class="input-group mb-3">
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Id"
                                  aria-label="Id"
                                  id="modalId<%= object.id %>"
                                  value="<%= object.id %>"
                                  readonly
                                />
                              </div>

                              <div class="input-group mb-3">
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Nombre"
                                  aria-label="Nombre"
                                  id="modalNombre<%= object.id %>"
                                  value="<%= object.nombre %>"
                                />
                              </div>

                              <div class="input-group mb-3">
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Marca"
                                  aria-label="Marca"
                                  id="modalMarca<%= object.id %>"
                                  value="<%= object.marca %>"
                                />
                              </div>

                              <div class="input-group mb-3">
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Cantidad"
                                  aria-label="Cantidad"
                                  id="modalCantidad<%= object.id %>"
                                  value="<%= object.cantidad %>"
                                />
                              </div>

                              <div class="input-group mb-3">
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Costo"
                                  aria-label="Costo"
                                  id="modalCosto<%= object.id %>"
                                  value="<%= object.costo %>"
                                />
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-danger btn-modal-cancel"
                                data-bs-dismiss="modal"
                              >
                                Cancelar
                              </button>
                              <button
                                type="button"
                                class="btn btn-primary btn-modal-add"
                                onclick="edit('<%= object.id %>')"
                              >
                                Confirmar
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <button
                        style="border: none; background-color: transparent"
                        onclick="drop(this)"
                        data-id="<%= object.id %>"
                      >
                        <img src="images/eliminar.png" />
                      </button>
                    </td>
                  </tr>
                  <% cont++; %> <% }) %>
                </tbody>
              </table>
              <% } else { %>
              <h5 class="text-align-center">No se encontraron objetos</h5>
              <% } %>
            </div>
            <div class="p-2"><%-include("templates/modal.ejs") %></div>
          </div>
        </div>
      </div>
    </div>
    <div><%-include("templates/footer.ejs") %></div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script src="js/script.js"></script>
  </body>
</html>
