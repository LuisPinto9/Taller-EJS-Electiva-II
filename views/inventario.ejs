<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("templates/head.ejs") %>
  </head>
  <body>
    <div><%-include("templates/navbar.ejs") %></div>
    <div class="back">
      <div class="container d-flex justify-content-center pt-5">
        <div class="card" style="width: 50rem">
          <div class="card-body">
            <% if (components.size > 0) { %>
            <div class="table-responsive">
              <table
                class="table table table-hover table-bordered border border-black rounded"
              >
                <thead>
                  <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Costo</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                  </tr>
                </thead>
                <tbody>
                  <% var cont = 1; %> <% for (const [k, v] of components) { %>
                  <tr>
                    <td scope="row"><%= cont %></td>
                    <td><%= v.id %></td>
                    <td><%= v.nombre %></td>
                    <td><%= v.tipo %></td>
                    <td><%= v.precio %></td>
                    <td>
                      <button
                        style="border: none; background-color: transparent"
                      >
                        <img src="images/editar.png" />
                      </button>
                    </td>
                    <td>
                      <button
                        style="border: none; background-color: transparent"
                      >
                        <img src="images/eliminar.png" />
                      </button>
                    </td>
                  </tr>
                  <% cont++; %> <% } %>
                </tbody>
              </table>
              <% } else { %>
              <h5 class="text-align-center">No se encontraron juegos</h5>
              <% } %>
            </div>
            <div class="pt-2"><%-include("templates/modal.ejs") %></div>
          </div>
        </div>
      </div>
    </div>
    <div><%-include("templates/footer.ejs") %></div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script src="js/script.js"></script>
  </body>
</html>
